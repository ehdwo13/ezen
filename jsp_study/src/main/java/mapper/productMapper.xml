<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="ProductMapper">
  	<insert id="add">
  		insert into product(category, name, price, total_amount) values
  		(#{category}, #{name}, #{price}, #{total_amount})
  	</insert>
  	<select id="list" resultType="domain.ProductVO">
  		select * from product
  	</select>
	<select id="detail" resultType="domain.ProductVO">
		select * from product where pnum = #{pnum}
	</select>
  </mapper>